<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_img"
    android:backgroundTint="#66000000"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sliding Picture Puzzle"
        android:layout_marginTop="10dp"
        android:paddingStart="10sp"
        android:paddingEnd="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/title_font"
        android:textColor="#222222"
        android:textSize="25sp"
        android:background="@drawable/cv_background"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/iv_original_img"
        android:layout_marginTop="20sp"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:src="@drawable/originalimg"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_counter"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3b3f44"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_original_img">
    <LinearLayout
        android:id="@+id/linear_layout_counter"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_original_img"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_move_counter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moves: "
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="#00BCD4"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#00BCD4"/>
        <TextView
            android:layout_marginStart="20sp"
            android:id="@+id/move_limit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Limit:100"
            android:textColor="#FF7043"
            android:textStyle="bold"
            android:textSize="18dp"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/grid_cardview"
        android:layout_marginTop="20sp"
        android:layout_width="307dp"
        android:layout_height="307dp"
        android:backgroundTint="#ADD8E6"
        app:layout_constraintTop_toBottomOf="@id/cv_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_00"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_02"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_01"
                android:layout_marginTop="10dp"
                android:layout_marginStart="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_20"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_02"
                android:layout_marginTop="10dp"
                android:layout_marginStart="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_10"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_10"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_00"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_11"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_21"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_12"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_11"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_20"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_01"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_21"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp"
                android:background="@drawable/img_12"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_22"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_height="93dp"
                android:layout_width="93dp" />

        </GridLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="307dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_cardview"
        android:backgroundTint="#32CD32"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_restart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Restart Game"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#006400"
        android:background="?selectableItemBackground"
        android:paddingStart="10dp"
        android:drawableLeft="@drawable/baseline_refresh_24"
        android:focusable="true"
        android:clickable="true" />
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>